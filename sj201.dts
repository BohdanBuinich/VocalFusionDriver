/*
 * Device Tree Overlay for SJ-201 Rev6&10 - XMOS VocalFusion 3510-INT
 * This DTO is designed to configure the necessary hardware interfaces and settings
 * for the SJ-201 board, which utilizes an I2S interface for audio data,
 * and requires specific GPIO pins for power and reset control.
 * Compile with: dtc -@ -H epapr -O dtb -o sj201-pi5.dtbo -Wno-unit_address_vs_reg sj201-pi5.dts
 */

/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2835";

	fragment@0 {
		target = <&i2s_clk_consumer>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@1 {
		target = <&sound>;
		__overlay__ {
			compatible = "simple-audio-card";
			simple-audio-card,name = "sj201";
			status = "okay";

			capture_link: simple-audio-card,dai-link@0 {
				format = "i2s";

				r_cpu_dai: cpu {
					sound-dai = <&i2s_clk_consumer>;

					dai-tdm-slot-num = <2>;
					dai-tdm-slot-width = <32>;
				};

				r_codec_dai: codec {
					sound-dai = <&codec_in>;
				};
			};
			
			playback_link: simple-audio-card,dai-link@1 {
				format = "i2s";

				p_cpu_dai: cpu {
					sound-dai = <&i2s_clk_consumer>;

					dai-tdm-slot-num = <2>;
					dai-tdm-slot-width = <32>;
				};

				p_codec_dai: codec {
					sound-dai = <&codec_out>;
				};
			};
		};
	};

	fragment@2 {
		target-path = "/";
		__overlay__ {
			vocalfusion_soundcard_ctrl: vocalfusion-soundcard {
				compatible = "vocalfusion-soundcard";
				status = "okay";
				
				clocks = <&clocks 38>; // RPI 4
				clock-names = "mclk";
				clock-frequency = <24576000>;  // 24.576 MHz
				
				pinctrl-names = "default";
				pinctrl-0 = <&xvf_clk_pin &xvf_ctrl_pins>;

				// Add GPIO properties here
				pwr-gpio = <&gpio 16 0>; // GPIO 16, active high
				rst-gpio = <&gpio 27 0>; // GPIO 27, active high
			};

			codec_out: spdif-transmitter {
				#address-cells = <0>;
				#size-cells = <0>;
				#sound-dai-cells = <0>;
				compatible = "linux,spdif-dit";
				status = "okay";
			};

			codec_in: spdif-receiver {
				#address-cells = <0>;
				#size-cells = <0>;
				#sound-dai-cells = <0>;
				compatible = "linux,spdif-dir";
				status = "okay";
			};
		};
	};

	fragment@3 {
		target = <&gpio>;
		__overlay__ {
			xvf_clk_pin: xvf_clk_pin {
				brcm,pins = <4>;
				brcm,function = <4>; // Set as ALT0 (GPCLK0)
			};
			xvf_ctrl_pins: xvf_ctrl_pins {
				brcm,pins = <16 27>;
				brcm,function = <1 1>; // Set as output
			};
		};
	};
};
